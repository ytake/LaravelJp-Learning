{
  "name": "laravel/laravel",
  "description": "The Laravel Framework.",
  "keywords": [
    "framework",
    "laravel"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.0.0",
    "cakephp/chronos": "^1.0.2",
    "erusev/parsedown-extra": "^0.7",
    "jms/serializer": "^1.6",
    "laravel/framework": "5.4.*",
    "phpmentors/domain-kata": "^1.0",
    "predis/predis": "^1.1",
    "ytake/laravel-aspect": "^1.5.0",
    "ytake/valueobjects": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "^2.8",
    "friendsofphp/php-cs-fixer": "^2.1",
    "whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
    "phpmetrics/phpmetrics": "^1.10.0",
    "sebastian/phpcpd": "*",
    "phploc/phploc": "*",
    "pdepend/pdepend": "^2.2.4",
    "ytake/gardening": "~0.0"
  },
  "autoload": {
    "psr-4": {
      "Learning\\": "app/",
      "LearningDomain\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php artisan optimize"
    ],
    "md": "php ./vendor/bin/phpmd src text ./phpmd.xml",
    "quality-assurance": [
      "php ./vendor/bin/phpunit",
      "php ./vendor/bin/phpcpd src/",
      "php ./vendor/bin/pdepend  --summary-xml=tests/build/summary.xml --jdepend-chart=tests/quality-assurance/jdepend.svg --overview-pyramid=tests/quality-assurance/pyramid.svg src/",
      "php ./vendor/bin/phploc src --log-xml=tests/quality-assurance/phploc.xml",
      "@phpmetrics"
    ],
    "cs": "php ./vendor/bin/php-cs-fixer fix",
    "phpcs": "./vendor/bin/phpcs app/ --report-full --report-source --colors",
    "phpmetrics": "./vendor/bin/phpmetrics --report-cli --report-html=tests/quality-assurance/report.html ./app --ignore-errors"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
